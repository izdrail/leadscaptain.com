---
import { Picture } from "astro:assets";
import heroImage from "assets/leads-captain.svg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-blue text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Free Lead Generation
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">

      Generate free leads effortlessly! Whether you're a contractor, a real estate agent, or a service provider, find the clients you need at no cost.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/marketing"
        class="flex  bg-blue text-yellow gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
        Sign Up
      </Link>
    </div>
  </div>
</main>
